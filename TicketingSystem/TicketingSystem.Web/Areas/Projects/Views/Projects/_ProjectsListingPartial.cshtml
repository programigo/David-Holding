@model IEnumerable<ProjectViewModel>

@if (Model.Count() == 0)
{
    <h3 style="text-align: center">No projects to display.</h3>
}
else
{
    @foreach (var project in Model)
    {
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading" style="text-align: center">@project.Name</div>
                <div class="panel-body" style="text-align: center">
                    @if (project.Description.Length > 120)
                    {
                        string text = project.Description.Substring(0, 120) + "...";

                        @text;

                    }
                    else
                    {
                        @project.Description;
                    }

                    <p><a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id">Learn more</a></p>
                </div>
            </div>
        </div>
    }
}


