@model ProjectListingServiceModel

<div class="jumbotron">
    <h2 class="project-name" style="text-align:center">@Model.Name</h2>
    <p>@Model.Description</p>
</div>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Confirm</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to remove @Model.Name?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <a asp-controller="Projects" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Yes</a>
            </div>
        </div>
    </div>
</div>

@if (User.IsInRole(WebConstants.AdministratorRole))
{
    <button id="btnSave" class="btn btn-danger" type="button" data-toggle="modal" data-target="#confirm-delete">Remove</button>
    <a asp-controller="Projects" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
}